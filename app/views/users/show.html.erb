
<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="col-md-8">
    <% if !current_user?(@user) && logged_in? %>
      <section class="user_chat">
        <h3>Friends Chat Room</h3>
        <%= render 'messages/message_chat' %>
      </section>
    <% end %>
  </div>
</div>